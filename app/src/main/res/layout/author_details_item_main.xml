<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="10dp"
    android:background="@drawable/bg_rectangular_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="230dp"
        android:src="@drawable/ic_top_circle_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        android:layout_height="70dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="112dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/image_dummy"
        app:shapeAppearanceOverlay="@style/roundedImageView" />

    <TextView
        android:id="@+id/authorNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/hind_semibold"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName"
        android:text="Hemant Sharma"
        android:textColor="@color/black_text"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/authorFromTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/authorNameTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/hind_regular"
        android:inputType="textPersonName"
        android:text="न्यूज़ डायरेक्टर - TV9  भारतवर्ष"
        android:textColor="@color/black_text"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/descriptionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/authorFromTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/hind_regular"
        android:gravity="center"
        android:text="न्यूज़ डायरेक्टर, TV9 नेटवर्क. पैंतीस बरस का पत्रकारीय अनुभव,बाबरी ध्वंस के वक्त विवादित इमारत से कोई सौ गज दूर था. कारसेवा, शिलान्यास, विवादित ढांचा खुलने का चश्मदीद. यश भारती अवार्ड से सम्मानित, लेखक- युद्ध में अयोध्या, अयोध्या का चश्मदीद, तमाशा मेरे आगे,द्वितीयोनास्ति, एकदा भारतवर्षे पुस्तकों के लेखक।"
        android:textColor="@color/app_text_color"
        android:textSize="15dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        >


        <LinearLayout
            android:id="@+id/followLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_rectangular_twitter"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >


            <ImageView
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:src="@drawable/ic_twitter"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/followTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:fontFamily="@font/hind_semibold"
                android:text="Follow on"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/emailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_rectangular_gray"
            app:layout_constraintStart_toEndOf="@+id/followLL"
            android:fontFamily="@font/hind_medium"
            android:textSize="14dp"
            android:text="hemant.sharma@tv9.com"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>