<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_marginRight="10dp"
    android:id="@+id/itemContainer"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/itemRL"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:background="@drawable/shape"
        android:padding="15dp"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/mainImageView"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:outlineProvider="background"
            android:src="@drawable/image_dummy"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:background="#B32C2C2C"
            android:layout_marginStart="10dp"
            android:visibility="visible"
            android:layout_below="@id/mainImageView"
            android:layout_marginTop="-30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:src="@drawable/tabler_photo_plus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/hind_regular"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </LinearLayout>



        <TextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainImageView"
            android:text="कल साढ़े 12 बजे होगी NATO की बैठक, राष्ट्रपति"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:fontFamily="@font/hind_regular"
            android:textColor="@color/black_text"
            android:textSize="14dp"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>