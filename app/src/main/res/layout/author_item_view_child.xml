<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/bg_rectangular_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:layout_width="125dp"
        android:src="@drawable/ic_top_circle_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        android:layout_height="45dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/image_dummy"
        app:shapeAppearanceOverlay="@style/roundedImageView" />

    <TextView
        android:id="@+id/authorNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/hind_semibold"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName"
        android:text="Hemant Sharma"
        android:textColor="@color/black_text"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/authorFromTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/authorNameTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/hind_regular"
        android:inputType="textPersonName"
        android:text="Author- TV9 भारतवर्ष"
        android:textColor="@color/author_color"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/viewProfileTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/authorFromTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/hind_regular"
        android:layout_marginTop="5dp"
        android:inputType="textPersonName"
        android:text="View Profile"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_shape_skip"
        android:textColor="@color/black_text"
        android:textSize="11dp" />

</androidx.constraintlayout.widget.ConstraintLayout>