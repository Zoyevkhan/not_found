<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:id="@+id/itemContainer"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/imageCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="4dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="92dp"
            android:src="@drawable/image_dummy"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_height="52dp"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/titleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="साबरमती आश्रम पहुंच केजरीवाल और भगवंत मान ने चलाया चरखा"
        android:fontFamily="@font/hind_regular"
        android:textColor="@color/black_text"
        android:layout_toStartOf="@+id/imageCardView"
        android:textSize="15dp"
        android:layout_marginEnd="10dp"
        />

    <TextView
        android:id="@+id/politicsTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTv"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/hind_light"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="10dp"
        android:textSize="10dp"
        android:textColor="@color/red"
        android:text="DELHI"
        />

    <TextView
        android:id="@+id/timeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textSize="10dp"
        android:layout_toRightOf="@+id/politicsTv"
        android:layout_below="@id/titleTv"
        android:textColor="@color/time_ago_text"
        android:text="7 MINS AGO"
        />

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:background="@color/gray_line_color"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@+id/politicsTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:layout_height="2dp"/>

</RelativeLayout>