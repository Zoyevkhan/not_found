<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/followLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_rectangular_twitter"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        
        <ImageView
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_twitter"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/followTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:fontFamily="@font/hind_semibold"
            android:text="Follow on"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/emailTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_text"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/bg_rectangular_gray"
        app:layout_constraintStart_toEndOf="@+id/followLL"
        android:fontFamily="@font/hind_medium"
        android:textSize="14dp"
        android:text="hemant.sharma@tv9.com"
        />

</androidx.constraintlayout.widget.ConstraintLayout>