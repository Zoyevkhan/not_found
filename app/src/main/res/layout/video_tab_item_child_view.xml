<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:id="@+id/itemContainer"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/topRL"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/image_dummy"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_video_play_circle"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/politicsTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/topRL"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/hind_regular"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="10dp"
        android:textSize="10dp"
        android:textColor="@color/red"
        android:text="Russia Ukraine War"
        />

    <TextView
        android:id="@+id/timeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textSize="10dp"
        android:layout_toRightOf="@+id/politicsTv"
        app:layout_constraintTop_toBottomOf="@+id/topRL"
        app:layout_constraintStart_toEndOf="@+id/politicsTv"
        android:textColor="@color/time_ago_text"
        android:text="7 Mins AGO | 05:30"
        />

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/politicsTv"
        android:text="यूक्रेन को अंधेरे में क्यों डुबो देना चाहते हैं पुतिन? देखें रिपोर्ट"
        android:fontFamily="@font/hind_semibold"
        android:textColor="@color/black_text"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>