<resources>
    <declare-styleable name="FullscreenAttrs">
        <attr name="fullscreenBackgroundColor" format="color" />
        <attr name="fullscreenTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <attr name="interval" format="integer"/>

    <attr name="showIndicator" format="boolean"/>

    <attr name="orientation" format="enum">
        <enum name="horizontal" value="0"/>
        <enum name="vertical" value="1"/>
    </attr>

    <attr name="autoPlaying" format="boolean"/>

    <declare-styleable name="RecyclerViewBannerBase">
        <attr name="interval"/>
        <attr name="showIndicator" />
        <attr name="orientation" />
        <attr name="autoPlaying"/>
        <attr name="indicatorSelectedSrc" format="color|reference"/>
        <attr name="indicatorUnselectedSrc" format="color|reference"/>
        <attr name="indicatorSpace" format="dimension|reference"/>
        <attr name="indicatorMarginLeft" format="dimension|reference"/>
        <attr name="indicatorMarginRight" format="dimension|reference"/>
        <attr name="indicatorMarginBottom" format="dimension|reference"/>
        <attr name="indicatorGravity" format="enum">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="BannerLayout">
        <attr name="interval" />
        <attr name="showIndicator" />
        <attr name="orientation" />
        <attr name="autoPlaying" />

        <attr name="itemSpace" format="integer" />
        <attr name="centerScale" format="float" />
        <attr name="moveSpeed" format="float" />
    </declare-styleable>


    <!--podcast-->
    <declare-styleable name="JcPlayerView">
        <attr name="text_audio_title_color" format="color" />
        <attr name="text_audio_current_duration_color" format="color" />
        <attr name="text_audio_duration_color" format="color" />
        <attr name="seek_bar_color" format="color" />
        <attr name="progress_color" format="color" />

        <attr name="play_icon_color" format="color" />
        <attr name="pause_icon_color" format="color" />
        <attr name="next_icon_color" format="color" />
        <attr name="previous_icon_color" format="color" />
        <attr name="random_icon_color" format="color" />
        <attr name="repeat_icon_color" format="color" />
        <attr name="repeat_one_icon_color" format="color" />

        <attr name="play_icon" format="reference" />
        <attr name="pause_icon" format="reference" />
        <attr name="next_icon" format="reference" />
        <attr name="previous_icon" format="reference" />
        <attr name="random_icon" format="reference" />
        <attr name="repeat_icon" format="reference" />
        <attr name="repeat_one_icon" format="reference" />

        <attr name="show_random_button" format="boolean" />
        <attr name="show_repeat_button" format="boolean" />

    </declare-styleable>

</resources>