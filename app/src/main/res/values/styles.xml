<resources>

    <style name="Widget.Theme.TV9News.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.TV9News.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Theme.Fab_Bottom_app_bar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#0F9D58</item>
        <item name="colorPrimaryVariant">#0F9D58</item>
        <item name="colorOnPrimary">#000</item>
    </style>

    <style name="TransparentDialog" parent="@android:style/Theme.Panel">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="bottomsheetdialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/bottomsheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="bottomsheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/white</item>
    </style>

    <style name="bottomsheetDialogTheme" parent="bottomsheetdialog" />

    <style name="PauseDialogAnimation">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="SeekBarColor" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/black_text</item>
    </style>
</resources>