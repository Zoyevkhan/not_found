<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TV9News" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.TV9News.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TV9News.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.TV9News.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.TV9News.Fullscreen" parent="Theme.TV9News">
        <item name="android:actionBarStyle">@style/Widget.Theme.TV9News.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.TV9News.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/purple_200</item>
        <item name="fullscreenTextColor">@color/purple_200</item>
    </style>
</resources>